.home .hero #main-title {
    color: darkorange;
}

.home .hero p.description {
    font-size: 14pt;
}

.theme-default-content :not(pre)>code {
    font-family: monospace;
    color: #600;
    border: 1px solid #edc;
    border-radius: .25em;
    padding: 0 0.3em;
    background: #fafafa;
}

.theme-default-content:not(.custom) {
    max-width: none;
}
.page .page-nav {
    max-width: none;
}

.medium-zoom--opened .medium-zoom-overlay {
    opacity: 0.5 !important;
}